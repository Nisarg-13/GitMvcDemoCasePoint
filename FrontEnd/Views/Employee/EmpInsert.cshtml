    </div>

    <label for="c_hobby" class="form-label">Hobby</label>
   
      <div class="form-group">
        @foreach (var hobby in new List<string> { "Reading", "Playing" })
        {
            @* <div class="form-check">
                <input class="form-check-input" type="checkbox" name="c_hobby" value="@hobby" id="flexCheck@(hobby)"
                       @(Model != null && Model.c_hobby != null && Model.c_hobby.Contains(hobby) ? "checked" : "")>
                <label class="form-check-label" for="flexCheck@(hobby)">
