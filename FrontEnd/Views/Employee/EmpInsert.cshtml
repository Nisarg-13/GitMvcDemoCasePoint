                <input class="form-check-input" type="checkbox" name="c_hobby" value="@hobby"
                    id="flexCheck@(hobby)"
                    checked="@(Model != null && Model.c_hobby != null && Model.c_hobby.Contains(hobby))">
                <label class="form-check-label" for="flexCheck@(hobby)">
                    @hobby
                </label>
            </div>
        }
    </div>
    <div class="form-group">
        <label asp-for="c_password" class="control-label">password</label>
        <input asp-for="c_password" class="form-control" type="password" id="c_password" name="c_password" />
        <span asp-validation-for="c_password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="c_photo" class="control-label">Photo</label>
        <input asp-for="c_photo" class="form-control" type="File" id="c_photo" name="c_photos" onchange="updateImagePreview('c_photo','c_photos')"/>
        <img src="" alt="" id="c_photos" width="100">
        <span asp-validation-for="c_photo" class="text-danger"></span>
    </div>

<div class="form-group">
    <label for="exampleSelectCity" class="form-label">City</label>
    <select class="form-select" asp-for="c_cityid" aria-label=" select City">
      <option selected>Open this select menu</option>
      @foreach (var city in (IEnumerable<SelectListItem>)ViewBag.Tasks)
      {
        <option value="@city.Value">@city.Text</option>
      } this .cshtml
    </select>
  </div>

    <div class="form-group">
    <label for="exampleSelectDepartment" class="form-label">Department</label>
    <select class="form-select" asp-for="c_departmentid" aria-label=" select City">
      <option selected>Open this select menu</option>
      @foreach (var dept in (IEnumerable<SelectListItem>)ViewBag.Tasks2)
      {
        <option value="@dept.Value">@dept.Text</option>
      } this .cshtml
    </select>
  </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<script>
    function updateImagePreview(inputId,previewId){
        var input = document.getElementById(inputId);
        var preview = document.getElementById(previewId);
        if(input.files && input.files[0]){
            var reader = new FileReader();

            reader.onload = function(e){
                preview.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

