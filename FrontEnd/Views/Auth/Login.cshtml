@model AuthModel;
@{
    ViewData["Title"] = "Login Form";
}
<h1>Login Form</h1>
<form asp-action="Login" method="post">
    
    <div class="form-group">
        <label asp-for="c_email" class="control-label">Email</label>
        <input asp-for="c_email" class="form-control" />
        <span asp-validation-for="c_email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="c_password" class="control-label">Password</label>
        <input asp-for="c_password" class="form-control" />
        <span asp-validation-for="c_password" class="text-danger"></span>
    </div>
    

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
